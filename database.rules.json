{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "bloqueos": {
      ".indexOn": ["ip"]
    },
    "clientes":{
      ".indexOn": ["cuit", "codigo", "id"]
    },
    "clientes_web":{
      ".indexOn": ["cuit"]
    },
    "descuentos":{
      ".indexOn": ["cliente"]
    },
    "direcciones":{
      ".indexOn": ["id_usuario"]
    },
    "pedidos_web":{
      ".indexOn": ["nro_doc", "grupo", "id_usuario"]
    },
    "pedidos_det_web":{
      ".indexOn": ["nro_doc", "id_usuario", "id"]
    },
    "productos_destacados_ecommerce":{
      ".indexOn": ["producto"]
    },
    "productos_eliminados_ecommerce":{
      ".indexOn": ["producto", "id"]
    },
    "productos":{
      ".indexOn": ["cod_int", "id"]
    },
    "usuarios":{
      ".indexOn": ["email", "cuit", "id"]
    }
  }
}